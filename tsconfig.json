{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": { "~/*": ["./source/*"] },
    "typeRoots": ["./source/types", "node_modules/@types"],
    "types": ["jest"],
    "useUnknownInCatchVariables": false,
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js","node_modules/.bin/tsc/node_modules"
  ]
}
